// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  email    String @unique
  password String
  posts    Post[]
}

model Post {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  img     String?
  title   String
  content String
  userId  String  @db.ObjectId
  user    User    @relation(fields: [userId], references: [id])
}

model About {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  highlightedTitle String
  title            String
  subtitle         String
  cv               String
  contactSlug      String
  linkedIn         String
  github           String
}

model SkillList {
  id       String              @id @default(auto()) @map("_id") @db.ObjectId
  frontend SkillItemFrontend[]
  backend  SkillItemBackend[]
  other    SkillItemOther[]
}

model SkillItemFrontend {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  skills      String
  SkillList   SkillList? @relation(fields: [skillListId], references: [id])
  skillListId String?    @db.ObjectId
}

model SkillItemBackend {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  skills      String
  SkillList   SkillList? @relation(fields: [skillListId], references: [id])
  skillListId String?    @db.ObjectId
}

model SkillItemOther {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  skills      String
  SkillList   SkillList? @relation(fields: [skillListId], references: [id])
  skillListId String?    @db.ObjectId
}

model Experience {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  image    String
  name     String
  url      String
  location String
  position String
  date     String
  desc     String
  stack    String
}
